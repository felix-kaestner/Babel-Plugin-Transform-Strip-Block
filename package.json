{
  "name": "babel-plugin-transform-strip-block",
  "version": "0.0.2",
  "description": "A Babel Plugin to strip blocks of code marked by special comment tags.",
  "main": "src/index.js",
  "license": "MIT",
  "homepage": "felix-kaestner.com",
  "author": {
    "name": "Felix KÃ¤stner",
    "url": "https://felix-kaestner.com",
    "email": "hello@felix-kaestner.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "babel-plugin",
    "babel-transform"
  ],
  "scripts": {
    "pkg": "pika build",
    "pkg:publish": "pika publish",
    "build": "BABEL_ENV=production babel src --out-dir lib --source-maps inline",
    "test": "BABEL_ENV=test jest",
    "test:dev": "BABEL_ENV=test jest --watchAll",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --fix --ext .js",
    "format": "prettier --write \"src/**/*.{js,jsx,json,md}\"",
    "version": "yarn build"
  },
  "dependencies": {
    "@babel/helper-plugin-utils": "^7.10.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "babel-jest": "^26.3.0",
    "babel-plugin-tester": "^9.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "jest": "^26.3.0",
    "lint-staged": "^10.4.0",
    "np": "^6.5.0",
    "prettier": "^2.1.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": "> 0.25%, not dead",
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.x",
    "yarn": ">= 1.4.x"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "test/**/*",
            ".vscode/**/*",
            ".github/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  }
}
